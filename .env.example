# Environment Configuration for Cross-Publication Insight Assistant

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# CrewAI Configuration
CREWAI_VERBOSE=true
CREWAI_MEMORY=true
CREWAI_MAX_ITERATIONS=10

# Web Scraping Configuration
WEB_SCRAPING_RATE_LIMIT=1.0
WEB_SCRAPING_MAX_RETRIES=3
WEB_SCRAPING_TIMEOUT=30
WEB_SCRAPING_USER_AGENT=CrossPublicationInsightAssistant/1.0

# Security Configuration
SECURITY_ALLOWED_DOMAINS=arxiv.org,scholar.google.com,researchgate.net,ieee.org,acm.org,springer.com,nature.com,science.org
SECURITY_MAX_CONTENT_SIZE=10485760
SECURITY_VALIDATE_SSL=true

# UI Configuration
UI_HOST=localhost
UI_PORT=8501
UI_DEBUG=false
UI_MAX_FILE_SIZE=50MB

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/application.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Analysis Configuration
ANALYSIS_MIN_KEYWORDS=5
ANALYSIS_MAX_KEYWORDS=50
ANALYSIS_CONFIDENCE_THRESHOLD=0.7
ANALYSIS_BATCH_SIZE=10

# Database Configuration (Optional)
# DATABASE_URL=sqlite:///publications.db
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Visualization Configuration
VIZ_DEFAULT_THEME=plotly_white
VIZ_COLOR_PALETTE=viridis
VIZ_FIGURE_WIDTH=800
VIZ_FIGURE_HEIGHT=600

# Testing Configuration
TEST_MODE=false
TEST_MOCK_LLM=false
TEST_SKIP_SLOW=false
